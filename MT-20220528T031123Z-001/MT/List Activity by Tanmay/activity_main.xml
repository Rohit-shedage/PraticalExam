<?xml version="1.0"?>
<RelativeLayout tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:layout_height="60dp"
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:textSize="22dp"
        android:hint="Enter Item Here"
        android:layout_centerHorizontal="true"
        android:id="@+id/it"/>

    <Button
        android:layout_height="70dp"
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/ins"
        android:layout_below="@id/it"
        android:text="Insert"/>

    <Button
        android:layout_height="70dp"
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/de"
        android:layout_below="@id/ins"
        android:text="Delete"/>

    <Button android:layout_height="70dp"
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/se"
        android:layout_below="@id/de"
        android:text="Search"/>

    <ListView
        android:layout_height="wrap_content"
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/lvs"
        android:layout_below="@id/se"/>

</RelativeLayout>